                    "NA": {
                        "endpoint": {
                            "uri": "arn:aws:lambda:eu-central-1:123456789012:function:perplexity-alexa-skill"
                        }
                    }
                }
            }
        },
        "manifestVersion": "1.0",
        "permissions": [],
